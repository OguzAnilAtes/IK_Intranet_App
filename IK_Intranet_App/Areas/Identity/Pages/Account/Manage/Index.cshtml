@page
@model IndexModel
@{
    ViewData["Title"] = "Profil Bilgilerim";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-md-9">
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h4 class="fw-bold text-primary mb-0">
                    <i class="bi bi-person-badge me-2"></i>Profil Bilgilerim
                </h4>
            </div>
            <div class="card-body p-4">
                <partial name="_StatusMessage" model="Model.StatusMessage" />

                <form id="profile-form" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control bg-light" placeholder="Kullanıcı Adı" disabled />
                        <label asp-for="Username" class="form-label text-muted">Kullanıcı Adı / Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.AdSoyad" class="form-control" placeholder="Ad Soyad" />
                        <label asp-for="Input.AdSoyad" class="form-label">Ad Soyad</label>
                        <span asp-validation-for="Input.AdSoyad" class="text-danger"></span>
                    </div>

                    <button id="update-profile-button" type="submit" class="btn btn-primary rounded-pill px-4 mt-2 shadow-sm">
                        Bilgileri Güncelle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}