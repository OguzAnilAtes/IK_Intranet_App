@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row">
    <div class="col-md-9">
        <div class="card shadow-sm border-0 rounded-4">

            <div class="card-header bg-white border-0 pt-4 px-4">
                <h4 class="fw-bold text-primary mb-0">
                    <i class="bi bi-shield-lock-fill me-2"></i> Şifre Değiştir
                </h4>
            </div>

            <div class="card-body p-4">
                <partial name="_StatusMessage" for="StatusMessage" />

                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mevcut şifre" />
                        <label asp-for="Input.OldPassword" class="form-label text-muted">Mevcut Şifre</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni şifre" />
                        <label asp-for="Input.NewPassword" class="form-label text-muted">Yeni Şifre</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre tekrar" />
                        <label asp-for="Input.ConfirmPassword" class="form-label text-muted">Yeni Şifre Tekrar</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary rounded-pill px-4 mt-2 shadow-sm">
                        Şifreyi Güncelle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}