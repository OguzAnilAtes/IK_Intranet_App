@{
    ViewData["Title"] = "Ana Sayfa";
    // Controller'dan gelen sinyalleri alıyoruz
    bool hasTeam = ViewBag.UserHasTeam != null && (bool)ViewBag.UserHasTeam;
    bool isLoggedIn = User.Identity.IsAuthenticated; // Kullanıcı giriş yapmış mı?
}

<div class="container py-5">

    @if (!isLoggedIn)
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <span class="display-1 text-primary"><i class="bi bi-buildings-fill"></i></span>
            </div>
            <h1 class="display-4 fw-bold text-dark mb-3">IK Yönetim Paneli</h1>
            <p class="lead text-muted mb-5 col-md-8 mx-auto">
                Personel yönetimi, görev takibi ve ekip işbirliği için tek durak noktası.
                Başlamak için lütfen hesabınıza giriş yapın.
            </p>

            <div class="d-flex justify-content-center gap-3">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                </a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-dark btn-lg px-5 rounded-pill">
                    <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                </a>
            </div>
        </div>
    }
    else if (!hasTeam)
    {
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold text-dark mb-3">Tekrar Hoş Geldiniz!</h1>
            <p class="lead text-muted mb-4">Mevcut bir takımınız görünmüyor. Devam etmek için seçim yapın:</p>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger d-inline-block px-4 rounded-3 shadow-sm">
                    <i class="bi bi-exclamation-circle-fill me-2"></i>@TempData["Error"]
                </div>
            }
        </div>

        <div class="row justify-content-center g-4">
            <div class="col-md-5">
                <div class="card h-100 shadow border-0 rounded-4">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4 text-primary">
                            <i class="bi bi-building-add display-1"></i>
                        </div>
                        <h3 class="fw-bold">Yeni Ekip Kur</h3>
                        <p class="text-muted mb-4">Kendi çalışma alanınızı oluşturun ve yönetici olun.</p>

                        <form asp-controller="Team" asp-action="CreateTeam" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" name="teamName" class="form-control" placeholder="Ekip Adı" required>
                                <label>Ekip / Şirket Adı</label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill">Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-1 d-flex align-items-center justify-content-center">
                <span class="text-muted fw-bold text-uppercase border p-2 rounded-circle bg-light">VS</span>
            </div>

            <div class="col-md-5">
                <div class="card h-100 shadow border-0 rounded-4">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4 text-success">
                            <i class="bi bi-ticket-perforated display-1"></i>
                        </div>
                        <h3 class="fw-bold">Ekibe Katıl</h3>
                        <p class="text-muted mb-4">Size verilen davet kodunu girerek mevcut ekibe dahil olun.</p>

                        <form asp-controller="Team" asp-action="JoinTeam" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" name="inviteCode" class="form-control" placeholder="Davet Kodu" required>
                                <label>Davet Kodu</label>
                            </div>
                            <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill">Katıl</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-dark">
                @if (ViewBag.TeamName != null)
                {
                    <i class="bi bi-building text-primary me-2"></i>
                    @ViewBag.TeamName
                }
                else
                {
                    <text>IK Yönetim Paneli</text>
                }
            </h1>
            <p class="lead text-muted">Personel ve Görev Takip Sistemi</p>

        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card bg-primary text-white h-100 shadow border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h6 class="text-uppercase opacity-75">Bana Atanan</h6>
                            <h1 class="display-4 fw-bold">@ViewBag.BenimGorevlerim</h1>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-3">
                            <i class="bi bi-person-workspace fs-1 opacity-50"></i>
                            <span class="badge bg-white text-primary">Aktif</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 border-start border-4 border-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-muted text-uppercase mb-0">Toplam Görev</h6>
                            <div class="icon-shape bg-light text-primary rounded-circle p-3">
                                <i class="bi bi-list-task fs-4"></i>
                            </div>
                        </div>
                        <h2 class="fw-bold mb-0">@ViewBag.ToplamGorev</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 border-start border-4 border-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-muted text-uppercase mb-0">Bekleyen İşler</h6>
                            <div class="icon-shape bg-light text-warning rounded-circle p-3">
                                <i class="bi bi-hourglass-split fs-4"></i>
                            </div>
                        </div>
                        <h2 class="fw-bold mb-0">@ViewBag.DevamEden</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 border-start border-4 border-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-muted text-uppercase mb-0">Tamamlanan</h6>
                            <div class="icon-shape bg-light text-success rounded-circle p-3">
                                <i class="bi bi-check-circle-fill fs-4"></i>
                            </div>
                        </div>
                        <h2 class="fw-bold mb-0">@ViewBag.Tamamlanan</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <a asp-controller="Gorev" asp-action="Index" class="btn btn-dark btn-lg px-5 py-3 rounded-pill shadow-lg hover-effect">
                    <i class="bi bi-kanban me-2"></i> Görev Panosuna Git
                </a>
            </div>
        </div>
    }
</div>