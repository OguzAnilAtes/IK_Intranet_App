@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-5">
    <h1 class="display-5 fw-bold text-dark">IK Takip Sistemi</h1>
    <p class="lead text-muted">Personel Görev ve Yönetim Paneli</p>
</div>

<div class="row text-center">

    <div class="col-md-3 mb-3">
        <div class="card shadow border-0 h-100" style="background-color: #e3f2fd;">
            <div class="card-body">
                <h6 class="card-title text-primary fw-bold text-uppercase">Bana Atanan</h6>
                <h1 class="display-3 fw-bold text-primary">@ViewBag.BenimGorevlerim</h1>
                <small class="text-muted">Aktif Görev</small>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-start border-4 border-primary h-100">
            <div class="card-body">
                <h6 class="card-title text-muted">Toplam Görev</h6>
                <h1 class="display-4 fw-bold text-primary">@ViewBag.ToplamGorev</h1>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-start border-4 border-warning h-100">
            <div class="card-body">
                <h6 class="card-title text-muted">Bekleyen İşler</h6>
                <h1 class="display-4 fw-bold text-warning">@ViewBag.DevamEden</h1>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-start border-4 border-success h-100">
            <div class="card-body">
                <h6 class="card-title text-muted">Tamamlanan</h6>
                <h1 class="display-4 fw-bold text-success">@ViewBag.Tamamlanan</h1>
            </div>
        </div>
    </div>

</div>

<div class="row mt-5 justify-content-center">
    <div class="col-md-6 text-center">
        <a asp-controller="Gorev" asp-action="Index" class="btn btn-dark btn-lg px-5 py-3 shadow rounded-pill">
            <i class="bi bi-list-task"></i> Görev Panosuna Git 🚀
        </a>
    </div>
</div>