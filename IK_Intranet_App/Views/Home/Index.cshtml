@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-dark">IK Yönetim Paneli</h1>
        <p class="lead text-muted">Personel ve Görev Takip Sistemi</p>
    </div>

    <div class="row g-4 mb-5">

        <div class="col-md-3">
            <div class="card bg-primary text-white h-100 shadow border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h6 class="text-uppercase opacity-75">Bana Atanan</h6>
                        <h1 class="display-4 fw-bold">@ViewBag.BenimGorevlerim</h1>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                        <i class="bi bi-person-workspace fs-1 opacity-50"></i>
                        <span class="badge bg-white text-primary">Aktif</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-0 border-start border-4 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted text-uppercase mb-0">Toplam Görev</h6>
                        <div class="icon-shape bg-light text-primary rounded-circle p-3">
                            <i class="bi bi-list-task fs-4"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold mb-0">@ViewBag.ToplamGorev</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-0 border-start border-4 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted text-uppercase mb-0">Bekleyen İşler</h6>
                        <div class="icon-shape bg-light text-warning rounded-circle p-3">
                            <i class="bi bi-hourglass-split fs-4"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold mb-0">@ViewBag.DevamEden</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-0 border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted text-uppercase mb-0">Tamamlanan</h6>
                        <div class="icon-shape bg-light text-success rounded-circle p-3">
                            <i class="bi bi-check-circle-fill fs-4"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold mb-0">@ViewBag.Tamamlanan</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <a asp-controller="Gorev" asp-action="Index" class="btn btn-dark btn-lg px-5 py-3 rounded-pill shadow-lg hover-effect">
                <i class="bi bi-kanban me-2"></i> Görev Panosuna Git
            </a>
        </div>
    </div>
</div>