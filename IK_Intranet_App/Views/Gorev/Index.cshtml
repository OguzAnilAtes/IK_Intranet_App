@model IEnumerable<IK_Intranet_App.Models.Gorev>
@using IK_Intranet_App.Enums
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Görev Panosu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 fw-bold">🚀 Görev Panosu</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-lg"></i> + Yeni Görev
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header bg-secondary text-white fw-bold text-center">
                YAPILACAKLAR
            </div>
            <div class="card-body" style="min-height: 500px; background-color: #f8f9fa;">
                @foreach (var item in Model.Where(x => x.Durum == Durumlar.Yapilacak))
                {
                    // Döngünün içinde her kart için yetkileri hesapla
                    var currentUserId = UserManager.GetUserId(User);
                    var isAdmin = User.IsInRole("Admin");
                    var isOlusturan = item.OlusturanUserId == currentUserId;
                    var isAtanan = item.AppUserId == currentUserId;

                    <div class="card mb-3 shadow-sm border-start border-5 border-secondary">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Baslik</h5>
                            <p class="card-text text-muted small">@item.Aciklama</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-secondary">@(item.AppUser != null ? item.AppUser.AdSoyad : "Atanmamış")</span>
                                <small class="text-muted" style="font-size: 11px;">@item.OlusturmaTarihi.AddHours(3).ToString("dd.MM HH:mm")</small>
                            </div>

                            <hr class="my-2" />
                            <div class="d-flex justify-content-end gap-2">
                                @if (isAdmin || isOlusturan || isAtanan)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">Edit</a>
                                }
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay">Info</a>
                                @if (isAdmin || isOlusturan)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">X</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header bg-warning text-dark fw-bold text-center">
                SÜRÜYOR
            </div>
            <div class="card-body" style="min-height: 500px; background-color: #fffbf0;">
                @foreach (var item in Model.Where(x => x.Durum == Durumlar.Suruyor))
                {
                    // Döngünün içinde her kart için yetkileri hesapla
                    var currentUserId = UserManager.GetUserId(User);
                    var isAdmin = User.IsInRole("Admin");
                    var isOlusturan = item.OlusturanUserId == currentUserId;
                    var isAtanan = item.AppUserId == currentUserId;

                    <div class="card mb-3 shadow-sm border-start border-5 border-warning">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Baslik</h5>
                            <p class="card-text text-muted small">@item.Aciklama</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-warning text-dark">@(item.AppUser != null ? item.AppUser.AdSoyad : "Atanmamış")</span>
                                <small class="text-muted" style="font-size: 11px;">@item.OlusturmaTarihi.AddHours(3).ToString("dd.MM HH:mm")</small>
                            </div>

                            <hr class="my-2" />
                            <div class="d-flex justify-content-end gap-2">
                                @if (isAdmin || isOlusturan || isAtanan)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">Edit</a>
                                }
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay">Info</a>
                                @if (isAdmin || isOlusturan)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">X</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header bg-success text-white fw-bold text-center">
                TAMAMLANDI
            </div>
            <div class="card-body" style="min-height: 500px; background-color: #f0fff4;">
                @foreach (var item in Model.Where(x => x.Durum == Durumlar.Tamamlandi))
                {
                    // Döngünün içinde her kart için yetkileri hesapla
                    var currentUserId = UserManager.GetUserId(User);
                    var isAdmin = User.IsInRole("Admin");
                    var isOlusturan = item.OlusturanUserId == currentUserId;
                    var isAtanan = item.AppUserId == currentUserId;

                    <div class="card mb-3 shadow-sm border-start border-5 border-success">
                        <div class="card-body">
                            <h5 class="card-title text-decoration-line-through text-muted">@item.Baslik</h5>
                            <p class="card-text text-muted small">@item.Aciklama</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-success">@(item.AppUser != null ? item.AppUser.AdSoyad : "Atanmamış")</span>
                                <small class="text-muted" style="font-size: 11px;">@item.OlusturmaTarihi.AddHours(3).ToString("dd.MM HH:mm")</small>
                            </div>

                            <hr class="my-2" />
                            <div class="d-flex justify-content-end gap-2">
                                @if (isAdmin || isOlusturan || isAtanan)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">Edit</a>
                                }
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay">Info</a>
                                @if (isAdmin || isOlusturan)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">X</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>