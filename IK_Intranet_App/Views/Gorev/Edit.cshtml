@model IK_Intranet_App.Models.Gorev
@using IK_Intranet_App.Enums

@{
    ViewData["Title"] = "Görevi Düzenle";

    //Duruma göre renk belirleme
    string badgeClass = "bg-secondary";

    if (Model.Durum == Durumlar.Suruyor)
    {
        badgeClass = "bg-warning text-dark";
    }
    else if (Model.Durum == Durumlar.Tamamlandi)
    {
        badgeClass = "bg-success";
    }
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">

                <div class="card-header bg-white border-0 pt-4 pb-0 px-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold text-primary">
                            <i class="bi bi-pencil-square me-2"></i> Görevi Düzenle
                        </h3>
                        <p class="text-muted small mb-0">Görev detaylarını aşağıdan güncelleyebilirsiniz.</p>
                    </div>

                    <div>
                        <span class="badge @badgeClass fs-6 rounded-pill px-3 py-2 shadow-sm">
                            @Model.Durum.GetDisplayName()
                        </span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="OlusturmaTarihi" />

                        <div class="form-floating mb-3">
                            <input asp-for="Baslik" class="form-control rounded-3" placeholder="Görev Başlığı" />
                            <label asp-for="Baslik" class="text-muted">Görev Başlığı</label>
                            <span asp-validation-for="Baslik" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Aciklama" class="form-control rounded-3" placeholder="Açıklama" style="height: 100px"></textarea>
                            <label asp-for="Aciklama" class="text-muted">Görev Açıklaması</label>
                            <span asp-validation-for="Aciklama" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted small">Atanan Personel</label>
                                <select asp-for="AppUserId" class="form-select form-select-lg rounded-3" asp-items="ViewBag.Users">
                                    <option value="">-- Personel Seçiniz --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Durum" class="form-label fw-bold text-muted small">Görev Durumu</label>
                                <select asp-for="Durum" class="form-select form-select-lg rounded-3" asp-items="Html.GetEnumSelectList<IK_Intranet_App.Enums.Durumlar>()"></select>
                                <span asp-validation-for="Durum" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted small">Oluşturulma Tarihi</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-calendar-event"></i></span>
                                <input type="text" class="form-control bg-light border-0" value="@Model.OlusturmaTarihi.AddHours(3).ToString("dd.MM.yyyy HH:mm")" disabled />
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-3">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4 text-muted">İptal</a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm fw-bold">
                                Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}