@model IK_Intranet_App.Models.Gorev
@using IK_Intranet_App.Enums

@{
    ViewData["Title"] = "Görev Detayları";

    //Duruma göre renk belirleme
    string badgeClass = "bg-secondary";

    if (Model.Durum == Durumlar.Suruyor)
    {
        badgeClass = "bg-warning text-dark";
    }
    else if (Model.Durum == Durumlar.Tamamlandi)
    {
        badgeClass = "bg-success";
    }
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">

                <div class="card-header bg-white border-0 pt-4 pb-0 px-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold text-primary">
                            <i class="bi bi-info-circle-fill me-2"></i> Görev Detayları
                        </h3>
                        <p class="text-muted small">Seçilen görevin tüm bilgileri aşağıdadır.</p>
                    </div>
                    <div>
                        <span class="badge @badgeClass fs-6 rounded-pill px-3 py-2 shadow-sm">
                            @Model.Durum.GetDisplayName()
                        </span>
                    </div>
                </div>

                <div class="card-body p-4">

                    <div class="mb-4">
                        <label class="text-muted small fw-bold text-uppercase">Görev Başlığı</label>
                        <h4 class="fw-bold text-dark mt-1">@Model.Baslik</h4>
                    </div>

                    <div class="mb-4">
                        <label class="text-muted small fw-bold text-uppercase">Açıklama</label>
                        <div class="p-3 bg-light rounded-3 mt-1 text-secondary border-start border-4 border-primary">
                            @if (!string.IsNullOrEmpty(Model.Aciklama))
                            {
                                @Model.Aciklama
                            }
                            else
                            {
                                <span class="fst-italic opacity-50">Açıklama girilmemiş.</span>
                            }
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 border rounded-3 h-100">
                                <label class="text-muted small fw-bold d-block mb-2">ATANAN PERSONEL</label>
                                @if (Model.AppUser != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                        <span class="fw-bold text-dark">@Model.AppUser.AdSoyad</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center text-danger">
                                        <i class="bi bi-exclamation-circle me-2"></i>
                                        <span class="fst-italic">Atanmamış</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 border rounded-3 h-100">
                                <label class="text-muted small fw-bold d-block mb-2">OLUŞTURMA TARİHİ</label>
                                <div class="d-flex align-items-center text-dark">
                                    <i class="bi bi-calendar-check text-success fs-5 me-2"></i>
                                    <span class="fw-bold">@Model.OlusturmaTarihi.AddHours(3).ToString("dd MMMM yyyy, HH:mm")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-5 border-top pt-3">
                        <a asp-action="Index" class="btn btn-light rounded-pill px-4">
                            <i class="bi bi-arrow-left me-1"></i> Listeye Dön
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill px-4 shadow-sm">
                            <i class="bi bi-pencil-square me-1"></i> Düzenle
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>