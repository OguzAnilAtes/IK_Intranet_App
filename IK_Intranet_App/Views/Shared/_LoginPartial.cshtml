@using Microsoft.AspNetCore.Identity
@using IK_Intranet_App.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string displayName = "";
    if (SignInManager.IsSignedIn(User))
    {
        // 1. Veritabanından giriş yapan kullanıcıyı çekiyoruz
        var user = await UserManager.GetUserAsync(User);

        // 2. AdSoyad var mı diye bakıyoruz, yoksa (fallback) email adresini alıyoruz
        var fullText = user?.AdSoyad ?? User.Identity?.Name;

        if (!string.IsNullOrEmpty(fullText))
        {
            var parts = fullText.Split(' ');  //Sadece ilk ismi alıyoruz
            if (parts.Length > 0)
            {
                displayName = parts[0];
            }
        }
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profil Yönetimi">
                <i class="bi bi-person-circle me-1"></i> Merhaba @displayName!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white-50" style="text-decoration: none;">
                    <i class="bi bi-box-arrow-right"></i> Çıkış
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
        </li>
    }
</ul>