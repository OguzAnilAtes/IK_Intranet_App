@using Microsoft.AspNetCore.Identity
@using IK_Intranet_App.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string displayName = "Kullanıcı";
    string initial = "K";

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var fullText = user?.AdSoyad ?? User.Identity?.Name;

        if (!string.IsNullOrEmpty(fullText))
        {
            var parts = fullText.Split(' ');
            if (parts.Length > 0)
            {
                displayName = parts[0]; // Sadece ilk isim (Örn: Anıl)
                initial = displayName.Substring(0, 1).ToUpper(); // Baş harf (Örn: A)
            }
        }
    }
}

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="rounded-circle bg-white text-primary d-flex align-items-center justify-content-center fw-bold me-2"
                 style="width: 32px; height: 32px; font-size: 14px;">
                @initial
            </div>
            <span class="fw-bold">Merhaba, @displayName</span>
        </a>

        <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="navbarDropdown">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person-gear me-2 text-muted"></i>Profil Yönetimi
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
}