@model IK_Intranet_App.Models.Team

@{
    ViewData["Title"] = "Takım Ayarları";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2 class="fw-bold mb-4"><i class="bi bi-sliders text-primary me-2"></i>Takım Ayarları</h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success rounded-3 shadow-sm alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger rounded-3 shadow-sm alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0">Takım Kimliği</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UpdateName" method="post">
                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">TAKIM / ŞİRKET ADI</label>
                            <input type="text" name="teamName" value="@Model.Name" class="form-control form-control-lg rounded-3" />
                        </div>
                        <button type="submit" class="btn btn-dark rounded-pill px-4">
                            <i class="bi bi-save me-2"></i>Kaydet
                        </button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4 bg-primary text-white">
                <div class="card-body p-4 text-center">
                    <h5 class="fw-bold opacity-75 mb-3">EKİP DAVET KODU</h5>

                    <div class="bg-white text-dark rounded-3 p-3 d-inline-block mb-3 shadow-sm position-relative">
                        <span class="display-6 fw-bold font-monospace user-select-all">@Model.InviteCode</span>
                    </div>

                    <p class="mb-4 opacity-75 small">
                        Bu kodu paylaşarak yeni üyeleri ekibinize dahil edebilirsiniz.
                        <br>Yeni gelenler otomatik olarak "Üye" rolüyle başlayacaktır.
                    </p>

                    <form asp-action="RegenerateInviteCode" method="post" onsubmit="return confirm('UYARI: Davet kodunu yenilerseniz, eski koda sahip olan hiç kimse takıma katılamaz. Yeni kodu ekip arkadaşlarınızla tekrar paylaşmanız gerekir. Devam edilsin mi?');">
                        <button type="submit" class="btn btn-sm btn-light text-primary fw-bold rounded-pill px-4 shadow-sm hover-scale">
                            <i class="bi bi-arrow-repeat me-2"></i>Kodu Yenile (Eskisini İptal Et)
                        </button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>